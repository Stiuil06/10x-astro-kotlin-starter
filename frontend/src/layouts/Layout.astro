---
import "../styles/global.css";
import NavigationWrapper from "../components/NavigationWrapper.tsx";

interface Props {
  title?: string;
}

const { title = "Wspólnota Okrzei 41B" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavigationWrapper client:load />
    <main>
      <slot />
    </main>
    <footer class="bg-gray-50 border-t border-gray-200 mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="text-center text-sm text-gray-600">
          <p class="mb-1">© 2025 Wspólnota Mieszkaniowa Okrzei 41B. Wszystkie prawa zastrzeżone.</p>
          <p>REGON: 389051065 | NIP: 9592043082</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  main {
    flex: 1;
  }
</style>
