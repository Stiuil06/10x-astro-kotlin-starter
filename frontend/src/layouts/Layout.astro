---
import "../styles/global.css";
import { AppWrapper } from "../components/layout";

interface Props {
  title?: string;
}

const { title = "myAppName" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <AppWrapper client:load title={title}>
      <main>
        <slot />
      </main>
    </AppWrapper>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
