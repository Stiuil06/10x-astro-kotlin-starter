---
// Strona do testowania API endpointów
---

<Layout title="Test API">
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 py-8">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Test API Endpointów</h1>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Ta strona pozwala na testowanie wszystkich endpointów API zdefiniowanych w kontrakcie OpenAPI. Możesz testować
          endpointy wymagające autoryzacji po zalogowaniu się.
        </p>
      </div>

      <div id="api-tester"></div>
    </div>
  </div>
</Layout>

<script>
  import { ApiTester } from "../components/ApiTester";
  import { AuthProvider } from "../components/auth";
  import { createRoot } from "react-dom/client";
  import React from "react";

  // Renderuj komponent API Tester
  const container = document.getElementById("api-tester");
  if (container) {
    const root = createRoot(container);
    root.render(React.createElement(AuthProvider, null, React.createElement(ApiTester, null)));
  }
</script>
